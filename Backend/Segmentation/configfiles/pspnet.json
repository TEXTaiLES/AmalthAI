{
    "name": "PSPNet",
    "n_gpu": 1,
    "use_synch_bn": false,
    "arch": {
        "type": "PSPNet",
        "args": {
            "backbone": "resnet50",
            "freeze_bn": false,
            "freeze_backbone": true
        }
    },
    "train_loader": {
        "type": "CVATBased",
        "args": {
            "data_dir": "/segmentation/datasets/Dataset1",
            "batch_size": 3,
            "base_size": 512,
            "crop_size": 512,
            "augment": true,
            "shuffle": true,
            "scale": true,
            "flip": true,
            "rotate": true,
            "blur": false,
            "split": "train",
            "num_workers": 8,
            "palette_file": "/segmentation/datasets/Dataset2/labelmap.txt"
        }
    },
    "val_loader": {
        "type": "CVATBased",
        "args": {
            "data_dir": "/segmentation/datasets/Dataset1",
            "batch_size": 3,
            "crop_size": 512,
            "val": true,
            "split": "val",
            "num_workers": 4,
            "palette_file": "/segmentation/datasets/Dataset2/labelmap.txt"
        }
    },
    "optimizer": {
        "type": "SGD",
        "differential_lr": true,
        "args": {
            "lr": 0.012517886560226066,
            "weight_decay": 0.0001,
            "momentum": 0.68
        }
    },
    "loss": "CrossEntropyLoss2d",
    "ignore_index": 255,
    "lr_scheduler": {
        "type": "Poly",
        "args": {}
    },
    "trainer": {
        "epochs": 2,
        "save_dir": "/segmentation/runs",
        "save_period": 1,
        "monitor": "max Mean_IoU",
        "early_stop": 10,
        "tensorboard": false,
        "log_dir": "/segmentation/logs",
        "log_per_iter": 20,
        "localpath": "2025-08-29_11-55-41",
        "val": true,
        "val_per_epochs": 1
    }
}